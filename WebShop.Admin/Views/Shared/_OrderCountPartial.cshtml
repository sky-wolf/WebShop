@using WebShop.Data.Implementation

@inject IOrderRepository Order


<div class="col pt-3">
    <div class="card justify-content-center">
        <div class="card-header"><strong>Total Orders</strong></div>

        <div class="card-body align-content-center">
            @if(Order.GetList().Count != null)
            {
                @Order.GetList().Count
            }else
            {
                <em>0</em>
            }
        </div>
    </div>
</div>
@using WebShop.Data.Implementation

@inject ICategoryRepository categoirys
<div class="col pt-3">
        <div class="card justify-content-center">
        <div class="card-header"><strong>Total Categorys</strong></div>

        <div class="card-body align-content-center">
            @if (categoirys.GetList().Count != null)
            {
                @categoirys.GetList().Count
            }
            else
            {
                        <em>0</em>
            }
        </div>
    </div>
</div>  
@model List<ProductList>

<div class="row justify-content-center pt-3">
    <div class="col">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Products</h1></div>

            <div class="card-body ">
                <a asp-action="Create" class="btn btn-primary">Add New</a>
                <hr />
                @if (Model.Count != 0)
                {
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th></th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td><a asp-action="Change" asp-route-Id="@item.Id" class="btn btn-success">Change</a></td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-info">Details</a>
                                        <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>        
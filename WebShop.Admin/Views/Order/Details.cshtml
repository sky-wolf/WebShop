@model OrderViewModel

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>@Model.Detail.Id </h1></div>
            <div class="card-body">
               @if(Model.Items.Count != 0)
                {
                   <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>A Price</th>
                                <th>Total</th>
                             </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Items)
                            {

                                <tr>
                                    <td>@item.ProductId | @item.ProductName</td>
                                    <th>@item.Quantity</th>
                                    <th>@item.APrice</th>
                                    <th>@(item.APrice * item.Quantity)</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                }else
                {
                    <p>No item in the order</p>
                }
                <h3 class="justify-content-end"> Total: @Model.Detail.Total</h3>
            </div>
            <div class="card-footer text-lg-end">
                <h3> Total: @Model.Detail.Total</h3>

            </div>
        </div>
    </div>
</div>
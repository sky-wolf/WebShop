@model IdentityRole

<div class="row justify-content-center pt-3">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Add Role</h1></div>

            <div class="card-body ">
                <form asp-action="Create" method="post">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-md-4 col-form-label text-md-end"></label>
                        <div class="col-md-6">
                            <input asp-for="Name" class="form-control" required />
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
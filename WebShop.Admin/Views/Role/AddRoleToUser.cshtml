<div class="row justify-content-center pt-3">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Add role to @ViewBag.Name</h1></div>

            <div class="card-body ">
                <form asp-action="AddRoleToUser" method="post">
                    <div class="row mb-3">
                        <label class="col-md-4 col-form-label text-md-end">Role:</label>
                        <div class="col-md-6">
                            <select class="form-control" name="rolename" asp-items="@ViewBag.Roles"></select>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <input type="submit" value="Add" class="btn btn-primary" asp-route-userid=@ViewBag.UserId />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
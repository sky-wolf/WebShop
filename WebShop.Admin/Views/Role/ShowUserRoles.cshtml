@model UserRoleViewModel

<div class="row justify-content-center pt-3">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Role for @Model.Name</h1></div>

            <div class="card-body ">
                <a asp-action="AddRoleToUser" asp-route-userid=@Model.UserId class="btn btn-primary">Add New</a>
                <hr />
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Roles)
                        {
                            <tr>
                                <td>@item</td>
                                <td>
                                    <a asp-action="RemoveRoleFromUser" asp-route-rolename=@item asp-route-userid=@Model.UserId class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 